<%=simple_form_for :search, url: root_path, method: :get do |f| %>
<%= f.input :q, label: false %>
<%end%>


<ul>	
	<% @pubs.each do |pub| %>

	<%= link_to root_path(search: { q: pub.address }) do %>

	<li data-lat="<%= pub.latitude %>" data-lng="<%= pub.longitude %>" >
			<p><%= pub.name%></p>
			<p><%= pub.address%></p>
		</li>

		<% end %>
	<% end %>
</ul>

<section id="map"></section>

<%= link_to "Add a Pub", new_pub_path, class: 'button' %>
